<div class="row justify-content-center mt-5">
  <div class="col-md-6 col-lg-4">
    <div class="card">
      <div class="card-header">
        <h2 class="text-center mb-0">Welcome Back</h2>
      </div>
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="mb-3">
            <%= f.label :email, class: "form-label" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email address" %>
          </div>

          <div class="mb-3">
            <%= f.label :password, class: "form-label" %>
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Password" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="mb-4 form-check">
              <%= f.check_box :remember_me, class: "form-check-input" %>
              <%= f.label :remember_me, class: "form-check-label" %>
            </div>
          <% end %>

          <div class="d-grid gap-2">
            <%= f.submit "Sign In", class: "btn btn-primary btn-lg" %>
          </div>
        <% end %>

        <div class="mt-4 text-center">
          <p class="text-muted">Don't have an account?</p>
          <%= link_to "Create Account", new_person_registration_path, class: "btn btn-outline-primary" %>
          <% if devise_mapping.recoverable? %>
            <div class="mt-3">
              <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-muted text-decoration-none" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
