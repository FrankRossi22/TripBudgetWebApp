<p style="color: green"><%= notice %></p>

<% content_for :title, "People" %>

<h1>People</h1>

<table class="table table-striped table-hover">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th class="text-center">Show</th>
      <th class="text-center">Edit</th>
      <th class="text-center">Delete</th>
    </tr>
  </thead>
  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.name %></td>
        <td><%= person.email %></td>
        <td class="text-center"><%= link_to "Show", person, class: "btn btn-sm btn-info" %></td>
        <td class="text-center"><%= link_to "Edit", edit_person_path(person), class: "btn btn-sm btn-warning" %></td>
        <td class="text-center">
          <%= button_to "Delete", person, 
                method: :delete, 
                form: { class: "d-inline" }, 
                data: { confirm: "Are you sure?" }, 
                class: "btn btn-sm btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New person", new_person_path, class: "btn btn-primary mt-3" %>
